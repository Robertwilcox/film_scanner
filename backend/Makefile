clean:
	@echo "Cleaning output directories..."
	@powershell -Command "if (Test-Path 'out1') { Remove-Item -Recurse -Force out1/* }"
	@powershell -Command "if (Test-Path 'out2') { Remove-Item -Recurse -Force out2/* }"
	@powershell -Command "if (Test-Path 'out3') { Remove-Item -Recurse -Force out3/* }"
	@powershell -Command "if (Test-Path 'out4') { Remove-Item -Recurse -Force out4/* }"
	@echo "All files in out1, out2, out3, and out4 have been deleted."
